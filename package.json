{
  "name": "whats-size",
  "version": "2.0.1",
  "description": "whats-size",
  "module": "lib/index.js",
  "types": "lib/@types/index.d.ts",
  "license": "MIT",
  "repository": "https://github.com/williampsena/whats-size",
  "author": "William Sena",
  "keywords": [
    "clothes",
    "measurements"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "ci": "npm run build && npm run test && npm run lint && npm run check",
    "build": "npm run build:clean && npm run build:esm && npm run build:types && npm run build:assets",
    "build:esm": "tsc -p config/tsconfig.esm.json",
    "build:types": "tsc -p config/tsconfig.types.json",
    "build:clean": "rimraf ./lib ./docs ",
    "build:assets": "node tasks/copy-assets.js",
    "build:db": "node tasks/database.js",
    "build:doc": "typedoc",
    "serve:doc": "http-server ./docs -p 3001",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "check": "tsc --noEmit",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "publish": "npm run build && (cd lib/ && npm publish)"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "eslint": "^8.41.0",
    "http-server": "^14.1.1",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4",
    "xls-to-json": "^0.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
